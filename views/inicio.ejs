<div>
  <h1 class="tituloResiduos">Sugerencias de manualidades</h1>
</div>

<div class="container-sugerencia">
  <div class="container-sugerencia-imagen">
    <% manualidades.forEach((manualidad) => { %>
      <div class="card">
        <a href="/manualidad/<%= manualidad.id_inor %>">
          <img src="<%= manualidad.imagen_inor %>" />
          <div class="container-sugerencia-overlay">
            <p><%= manualidad.titulo_inor %></p>
          </div>
        </a>
      </div>
    <% }); %>
  </div>
</div>

<div>
  <h1 class="tituloResiduos">Residuos</h1>
</div>

<div class="container">
  <div class="Organicos">
